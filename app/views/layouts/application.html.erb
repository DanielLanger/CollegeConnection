<!DOCTYPE html>
<html>
<head>
  <title>CollegeConnection</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
   <style>
      body {
        background-color: #00BFFF
      }
    </style>
    
</head>
<body>



<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
     <% if user_signed_in? %>
       <a class="brand" href="/users">Home</a>
      <% else %>
        <a class="brand" href="/">Home</a>      
      <% end %>
      
      <div class="nav pull-right">
         <% if user_signed_in? %>
          <div class="brand">
           <%= link_to 'Settings', edit_user_path(current_user), :style=>'color:#FFFFFF'%>
           
  		   <%= link_to 'Logout', 
   		   destroy_user_session_path,
           method: :delete, :style=>'color:#FFFFFF' %>           
           </div>
 		  <% end %>
     </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="hero-unit">
    <%= yield %>
  </div>
</div>

</body>
</html>
